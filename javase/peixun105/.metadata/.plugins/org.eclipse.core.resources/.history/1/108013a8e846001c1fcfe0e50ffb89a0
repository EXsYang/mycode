package com.Array.at;

import java.util.Arrays;

public class ArraysTest {
	public void test() {
		String name1;
		System.out.println(name);
		System.out.println(name1);//局部变量没有初始化值
	}
	String name;
	
public static void main(String[] args) {
	
	ArraysTest a = new ArraysTest();
	a.test();
	
	//1.boolean equals(int[] a,int[] b):判断两个数组是否相等
	int[] arr1 = new int[] {1,3,4,2,23};
	int[] arr2 = new int[] {333,454,53,3332,23,23,4,3};
	boolean isEquals = Arrays.equals(arr1, arr2);
	System.out.println(isEquals);
	
	//2.String toString(int[] a):输出数组信息
	System.out.println(Arrays.toString(arr1));
	
	//3.void fill(int[] a,int val):将指定值填充到数组之中
	Arrays.fill(arr1, 10);
	System.out.println(Arrays.toString(arr1));
	
	//4.void sort(int[] a):对数组进行排序
	Arrays.sort(arr2);
	System.out.println(Arrays.toString(arr2));
	
	//5.int binarySearch(int[] a,int key)	二分法针对有序
	int[] arr3 = new int[] {-33,3,42,43,};
	int index = Arrays.binarySearch(arr3,3);
	System.out.println(index);
	
	
	
	
	
	
}
}
